<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/demo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ApplyForJob"
    android:orientation="vertical">



    <TextView
        android:id="@+id/job_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Job Post"
        android:textSize="24sp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/company_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Company Name"
        android:textSize="24sp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/company_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Company Description"
        android:textSize="24sp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/working_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Working Type"
        android:textSize="24sp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/apply_for_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply job"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>





</LinearLayout>